<html lang="fr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>

    <title>Bibliotheque</title>
</head>

<body>
    <header>
        <!-- NAVIGATION BOOTSTRAP -->
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Bibliotheque</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                        <a class="nav-link" href="/upload">Convertir</a>
                        <a class="nav-link" href="/logout">Déconnexion</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="min-vh-100 d-flex justify-content-center bg-light">

        <section class="container my-5">
            <h2 class="text-center mb-4">Liste des vidéos encodées</h2>
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
                <!-- BOUCLE FOREACH EJS -->
                <% encodes.forEach((encode, index)=> { %>
                    <div class="col">
                        <!-- CARTE VIDEO - TITRE - RESUMER - EDITABLE -->
                        <div id="card-<%= index %>" class="card h-100 shadow-sm border-0">
                            <video class="card-img-top" controls>
                                <source src="<%= encode.path %>" type="video/mp4" />
                                Votre navigateur ne prend pas en charge les vidéos HTML5.
                            </video>

                            <div class="card-body">
                                <div class="mb-3">
                                    <label for="titre-<%= index %>" class="form-label">Titre :</label>
                                    <input type="text" class="form-control" id="titre-<%= index %>" name="titre"
                                        value="<%= encode.titre %>" placeholder="Nouveau titre..." />
                                </div>

                                <div class="mb-3">
                                    <label for="resume-<%= index %>" class="form-label">Résumé :</label>
                                    <textarea class="form-control" id="resume-<%= index %>" name="resume" rows="3"
                                        placeholder="Nouveau résumé..."><%= encode.resume %></textarea>
                                </div>
                            </div>

                            <div class="card-footer bg-white border-0 d-flex justify-content-center px-3 pb-3 gap-3">
                                <!-- BOUTON DE SUPPRESSION -->
                                <button class="btn btn-danger btn-sm delete-button" data-index="<%= index %>"
                                    data-id="<%= encode.id %>" title="Supprimer">
                                    <!-- ICON SVG -->
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        class="bi bi-trash" viewBox="0 0 16 16">
                                        <path
                                            d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                        <path
                                            d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                    </svg>
                                </button>

                                <!-- BOUTON DE MODIFICATION -->
                                <button class="btn btn-primary btn-sm update-button" data-index="<%= index %>"
                                    data-id="<%= encode.id %>" title="Mettre à jour">
                                    <!-- ICON SVG -->
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        class="bi bi-pencil-square" viewBox="0 0 16 16">
                                        <path
                                            d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                        <path fill-rule="evenodd"
                                            d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </section>


    </main>

    <footer>
        <%- include('footer'); -%>
    </footer>

<!-- SCRIPT TRAITEMENT ASYNCHRONE AJAX = Asynchronous JavaScript And XML -->
    <script src="/js/ajax.js"></script>

</body>


</html>